export async function getStaticPaths() {
  return firms.map((firm) => ({
    params: { restaurants: firm.firm.toLowerCase() }, // ðŸ”¹ match filename
  }));
}

const { restaurants } = Astro.params; // ðŸ”¹ must match [restaurants].astro
const firmData = firms.find((f) => f.firm.toLowerCase() === restaurants);

if (!firmData) {
  throw new Error("Firm not found");
}
---

<Layout
  title=`${firmData.firm} Restaurant (The Best)`
  background="linear-gradient(135deg, #1a1a1a 0%, #2d1810 40%, #3d2414 100%)"
>
