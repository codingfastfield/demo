export async function getStaticPaths() {
  return firms.map((firm) => ({
    params: { firm: firm.firm.toLowerCase() },
  }));
}

const { firm } = Astro.params;
const firmData = firms.find((f) => f.firm.toLowerCase() === firm);

if (!firmData) {
  throw new Error("Firm not found");
}

